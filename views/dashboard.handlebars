<div class="card" style="width: 18rem;">
{{#each posts as |post|}}
  <div class="card-body">
    <h5 class="card-title">Title: {{post.post_title}}</h5>
    {{!-- <h6 class="card-subtitle mb-2 text-muted">{{post_author}}</h6> --}}
    <p class="card-text">{{post.post_contents}}</p>
    <a href="/edit" class="card-link">Card link</a>
  </div>
  {{/each}}
  <a href="./partials/create-post.handlebars">
     <button type="button" id="newPostbtn" class="btn btn-success">New Post</button>
  </a>
 
</div